# TalentSphere Backend - Render Deployment Environment Variables
# Set these in your Render service environment variables

# Application Configuration
FLASK_ENV=production
PORT=10000
SECRET_KEY=your-secret-key-here-generate-strong-key
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-strong-key

# Database Configuration (Render will provide DATABASE_URL automatically)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Cache Configuration (Render will provide REDIS_URL automatically)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration (Update with your frontend domains)
CORS_ORIGINS=https://talentsphere-frontend.onrender.com,https://jobs.afritechbridge.online,https://talentsphere.afritechbridge.online,https://talent-sphere-emmz.vercel.app,https://your-frontend-domain.vercel.app

# Email Configuration for Password Reset
SMTP_SERVER=smtp.mail.yahoo.com
SMTP_PORT=587
SENDER_EMAIL=afritechbridge@yahoo.com
SENDER_PASSWORD=your-yahoo-app-password-here
SENDER_NAME=TalentSphere

# Frontend URL for Password Reset Links
FRONTEND_URL=https://talentsphere-frontend.onrender.com

# Performance Configuration
SLOW_QUERY_THRESHOLD=1.0
SLOW_REQUEST_THRESHOLD=2.0
ENABLE_PERFORMANCE_MONITORING=true
WARM_CACHE_ON_STARTUP=false
INIT_DB_ON_STARTUP=true

# Security Settings
BCRYPT_LOG_ROUNDS=12
PASSWORD_RESET_EXPIRE_HOURS=1
JWT_ACCESS_TOKEN_EXPIRES=3600

# Optimization Settings
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Render-specific optimizations
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
GUNICORN_CMD_ARGS="--config gunicorn.conf.py"
