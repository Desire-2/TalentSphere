# Environment Variables Template
# Copy this file to .env and customize for your environment
# Copy to .env.production for production deployment

# API Configuration
VITE_API_URL=http://localhost:5001
VITE_API_BASE_URL=http://localhost:5001/api

# App Configuration
VITE_APP_NAME=TalentSphere
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_API_LOGGING=true

# Production API URLs (uncomment and update for production)
# VITE_API_URL=https://your-backend-url.onrender.com
# VITE_API_BASE_URL=https://your-backend-url.onrender.com/api

# External Services (optional)
# VITE_GOOGLE_ANALYTICS_ID=your-google-analytics-id
# VITE_SENTRY_DSN=your-sentry-dsn
# VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key

# TinyMCE Configuration
# Get your API key from: https://www.tiny.cloud/
# Free tier allows up to 1,000 loads per month
VITE_TINYMCE_API_KEY=your-tinymce-api-key-here

# Development Settings
# VITE_HOT_RELOAD=true
# VITE_DEV_MODE=true

# SEO Configuration
VITE_GA_TRACKING_ID=your_google_analytics_tracking_id_here
VITE_SITE_URL=https://talentsphere.com
VITE_SITE_NAME=TalentSphere
VITE_CONTACT_EMAIL=support@talentsphere.com

# Google Ads Configuration
VITE_GOOGLE_ADS_CLIENT_ID=ca-pub-your-publisher-id-here
VITE_GOOGLE_ADS_GTAG_ID=AW-your-conversion-id-here

# Social Media
VITE_TWITTER_HANDLE=@talentsphere
VITE_FACEBOOK_URL=https://facebook.com/talentsphere
VITE_LINKEDIN_URL=https://linkedin.com/company/talentsphere

# SEO Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SEO_DEBUG=false

# Search Console Verification
VITE_GOOGLE_SITE_VERIFICATION=your_google_site_verification_code_here
VITE_BING_SITE_VERIFICATION=your_bing_site_verification_code_here
