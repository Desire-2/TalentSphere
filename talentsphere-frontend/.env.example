# Environment Variables Template
# Copy this file to .env and customize for your environment
# Copy to .env.production for production deployment

# API Configuration
VITE_API_URL=http://localhost:5001
VITE_API_BASE_URL=http://localhost:5001/api

# App Configuration
VITE_APP_NAME=TalentSphere
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_API_LOGGING=true

# Production API URLs (uncomment and update for production)
# VITE_API_URL=https://your-backend-url.onrender.com
# VITE_API_BASE_URL=https://your-backend-url.onrender.com/api

# External Services (optional)
# VITE_GOOGLE_ANALYTICS_ID=your-google-analytics-id
# VITE_SENTRY_DSN=your-sentry-dsn
# VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key

# TinyMCE Configuration
# Get your API key from: https://www.tiny.cloud/
# Free tier allows up to 1,000 loads per month
VITE_TINYMCE_API_KEY=your-tinymce-api-key-here

# Development Settings
# VITE_HOT_RELOAD=true
# VITE_DEV_MODE=true
